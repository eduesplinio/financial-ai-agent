{
  "name": "linio",
  "version": "0.1.0",
  "private": true,
  "description": "Linio - Assistente de IA financeira personalizado",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:e2e": "playwright test",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "create:user": "NODE_OPTIONS='--loader ts-node/esm' ts-node --project tsconfig.scripts.json scripts/create-test-user.ts",
    "db:generate": "turbo run db:generate",
    "db:push": "turbo run db:push",
    "db:migrate": "turbo run db:migrate",
    "db:seed": "turbo run db:seed",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@playwright/test": "^1.40.1",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.14",
    "@types/natural": "^6.0.1",
    "@types/node": "^20.19.12",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "commander": "^14.0.0",
    "dotenv": "^17.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.2",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.15.1",
  "dependencies": {
    "@auth/mongodb-adapter": "^3.10.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cron": "^2.4.3",
    "@types/date-fns": "^2.6.3",
    "bcryptjs": "^3.0.2",
    "cron": "^4.3.3",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.542.0",
    "ml-isolation-forest": "^0.1.0",
    "ml-naivebayes": "^4.0.0",
    "mongodb": "^6.19.0",
    "mongoose": "^8.18.1",
    "natural": "^8.1.0",
    "react-icons": "^5.5.0",
    "tsx": "^4.20.5"
  }
}
